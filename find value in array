#include<stdio.h>
int main()
{
  int i,v,size;
  int a[10]={2,4,6,8,10,12,13,14,15,16};
  size=10;
  printf ("Enter the number to search:");
  scanf("%d",&v);
  for(i=0;i<size;i++)
  {
    if(a[i]==v)
    {
      printf ("%d Value found at %d location",v,i);
      return 0;
    }
    if(i==size)
    printf ("%d element not found",v);
  }
}
