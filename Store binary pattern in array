#include <stdio.h>

int main()
{
    int i,j,r,n,a[10];
    printf("Enter a number to find it's Binary Pattern: ");
    scanf("%d",&n);
    i=0;
    while(n>0)
    {
        r=n%2;
        a[i]=r;
        n=n/2;
        i++;
    }
    for(j=i-1;j>=0;j--)
        printf("%d",a[j]);
   
    return 0;
}
